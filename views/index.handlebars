<div class="jumbotron ">
    <div class="container text-center">
        <img src="assets/img/BiteMeBurger.jpg" width="200" height="210" alt="Bite Me">
        <h4>Eat_Da_Burger!</h4>
        <p class="lead">Yummmmm.....</p>
    </div>
</div>
<div class="container container-fluid">
    <div class="row">
        <div class="card col-12 col-md-6 col-lg-6">
            <div class="card-title bg-info text-center">
                <h2>Burger to Eat!</h2>
            </div>
            <div class="card-body">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="card col-12 col-md-6 col-lg-6 ">
            <div class="card-title  bg-secondary text-center">
                <h2>Burger Devoured!</h2>
            </div>
            <div class="card-body">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-lg-12 mt-3 mb-4">
            <div class="card text-center">
                <div class="card-header bg-warning">
                    <h3>Enter a burger you want to eat </h3>
                </div>
                <div class="card-body">
                    <form class="create-form">

                        <div class="form-group">
                            <label for="bg">Burger Name:</label>
                            <input type="text" id="bg" name="burger_name">
                        </div>
                        <div class="form-group">
                            {{!-- <label for="sleep">Eaten?</label><br>
                            <input type="radio" name="devoured" value="1" checked>Eat Mo Burger!<br>
                            <input type="radio" name="devoured" value="0"> Devoured --}}
                        </div>
                        <button class="btn btn-dark" type="submit">Order Burger</button>
                    </form>
                </div>
            </div>
        </div>

    </div>


</div>